@model IEnumerable<Member>
@{
    ViewData["Title"] = "About";
}

<style>
    /*Head Area*/
    .head {
        padding: 50px;
        background-image: url('./../../images/bg/abousUs-bg.jpg');
        background-position: center center;
        background-attachment: scroll;
        background-size: cover;
    }

        .head h3 {
            text-align: center;
            font-weight: bold;
            color: #ff9800;
            padding-bottom: 10px;
            text-transform: uppercase;
        }

            .head h3::after {
                content: '';
                display: block;
                background: #ff9800;
                height: 3px;
                width: 170px;
                margin: 20px auto 5px;
            }
    .heading-title {
       display: block;
       text-align: center;
       margin-bottom: 60px;
       margin-top: 60px;
    }
        .heading-title h3 {
            position: relative;
            display: inline;
            padding: 12px 20px;
            font-size: 28px;
            line-height: 32px;
            text-transform: uppercase;
            font-weight: 600;
            border: 2px solid #898ba2;
        }

        .heading-title h3::before {
           background: #fff;
        }

        .heading-title h3::before {
            content: '';
            position: absolute;
            left: 50%;
            top: 0;
            display: block;
            width: 30px;
            height: 30px;
            margin-top: -16px;
            margin-left: -15px;
            background: #f4f4f4;
            -webkit-border-radius: 100%;
            -moz-border-radius: 100%;
            -ms-border-radius: 100%;
            -o-border-radius: 100%;
            border-radius: 100%;
        }
        .heading-title h3::after {
            content: '';
            position: absolute;
            left: 50%;
            top: 0;
            display: block;
            width: 12px;
            height: 12px;
            margin-top: -7px;
            margin-left: -6px;
            background: #898ba2;
            -webkit-border-radius: 100%;
            -moz-border-radius: 100%;
            -ms-border-radius: 100%;
            -o-border-radius: 100%;
            border-radius: 100%;
        }
    #myteam h3{
        text-align: center;
        font-weight: bold;
        color: #ff9800;
        padding-bottom: 10px;
        text-transform: uppercase;
        font-family: 'Trebuchet MS', sans-serif;
    }
    /*Card*/
    .frontside .card .card-body img {
        width: 120px;
        height: 120px;
        border-radius: 50%;
    }

    .section-title {
        text-align: center;
        color: #007bff;
        margin-bottom: 50px;
        text-transform: uppercase;
    }

    .site-main .about-area .btn-primary {
        color: #fff;
        background-color: #007bff;
        border-color: #007bff;
    }

    .site-main .section-title {
        text-align: center;
        color: #007bff;
        margin-bottom: 50px;
        text-transform: uppercase;
    }
    /* Banner Area */
    .site-banner {
        padding: 50px;
        background-image: url('./../../images/bg/about-bg.png');
        background-position: center center;
        background-attachment: scroll;
        background-size: cover;
    }

        .site-banner h1 {
            text-align: center;
            font-weight: bold;
            color: #ff9800;
            padding-bottom: 10px;
            text-transform: uppercase;
        }

            .site-banner h1::after {
                content: '';
                display: block;
                background: #ff9800;
                height: 3px;
                width: 170px;
                margin: 20px auto 5px;
            }

        .site-banner .site-title h1 {
            text-shadow: 2px 2px gray;
            color: white;
            font-size: 2rem;
        }

        .site-banner .site-title h2 {
            text-shadow: 2px 2px gray;
            font-weight: bold;
            color: white;
            font-size: 1.8rem;
        }

        .site-banner .site-title p {
            color: white;
            text-shadow: 2px 2px gray;
            font-weight: bold;
            font-size: 1rem;
        }
    /* End Banner Area */

    .tabs {
        width: 90%;
        height: auto;
        margin: 0 auto;
    }

        /* tab list item */
        .tabs .tabs-list {
            list-style: none;
            margin: 0px;
            padding: 0px;
        }

            .tabs .tabs-list li {
                width: 100px;
                float: left;
                margin: 0px;
                margin-right: 2px;
                padding: 10px 5px;
                text-align: center;
                background-color: cornflowerblue;
                border-radius: 3px;
            }

                .tabs .tabs-list li:hover {
                    cursor: pointer;
                }

                .tabs .tabs-list li a {
                    text-decoration: none;
                    color: white;
                }

        /* Tab content section */
        .tabs .tab {
            display: none;
            width: 96%;
            min-height: 250px;
            height: auto;
            border-radius: 3px;
            padding: 20px 15px;
            background-color: lavender;
            color: darkslategray;
            clear: both;
        }

            .tabs .tab h3 {
                border-bottom: 3px solid cornflowerblue;
                letter-spacing: 1px;
                font-weight: normal;
                padding: 5px;
            }

            .tabs .tab p {
                line-height: 20px;
                letter-spacing: 1px;
            }

    /* When active state */
    .active {
        display: block !important;
    }

    .tabs .tabs-list li.active {
        background-color: lavender !important;
        color: black !important;
    }

    .active a {
        color: black !important;
    }

    section.head h3 {
        text-align: center;
        font-weight: bold;
        color: #ff9800;
        padding-bottom: 10px;
        text-transform: uppercase;
        font-family: 'Trebuchet MS', sans-serif;
    }

    section.head p {
        color: black;
    }
    .card:hover img {
        transform: scale(1.2, 1.2);
        transition-duration: 500ms;
        transition-timing-function: ease-out;
        opacity: 0.7;
    }

    .card img {
        transform: scale(1.0, 1.0);
        transition-duration: 500ms;
        transition-timing-function: ease-out;
    }

    .card-img-wrapper {
        overflow: hidden;
        position: relative;
    }

    .member-icons {
        position: absolute;
        bottom: -30%;
        left: 0;
        right: 0;
        margin-right: auto;
        margin-left: auto;
        opacity: 0;
    }

    .card-img-wrapper:hover .member-icons {
        bottom: 0;
        opacity: 1;
    }

    .animate {
        transition: all 0.3s ease-in-out;
    }
</style>
<section class="head">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-xs-12 mt-xl-5">
                <div class="heading-title">
                    <h3 class="text-center">WHY US?</h3>
                </div>
                <hr />
                <p class="para text-center">
                    The leader in website design
                </p>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-xs-12 jumbotron">
                <p class="para">
                    Many people have their favorite boutiques, shops, restaurants, etc. Most go to those places in particular,
                    not only for the great product but for the customer service as well. Being in Polk County is perfect for
                    this mindset because it is growing so quickly, yet it still gives its residents a small town feel. At ICreatesites4u,
                    giving our clients that feeling is really important. We strive to be honest, completely transparent and do our best to
                    make our clients feel comfortable, while still giving professional and excellent service.
                    We will get to know you and understand your goals and ideas to help accelerate the growth of your business.
                </p>
                <a class="btn btn-outline-primary btn-sm text-uppercase" href="/Tools/Index">Tools We Use</a>
                <a class="btn btn-outline-success btn-sm text-uppercase" href="/MyMessages/New">Send Message</a>
                <a class="btn btn-outline-danger btn-sm text-uppercase" href="/Portfolio/Index">Portfolio</a>
            </div>
        </div>
    </div>
</section>
<div id="myteam" class="container mt-5">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="heading-title">
                <h3 class="text-center">Meet The Team</h3>
            </div>
            <hr />
        </div>
    </div>
    <div id="members" class="row">
        @foreach (var member in Model)
        {
            var image_path = $"/Image/{member.Photo}";
            <div class="col-lg-3 col-md-3 col-sm-6">
                <div class="card mb-4">
                    <div class="card-img-wrapper">
                        <img style="width:100%" class="img-thumbnail" src="@image_path" alt="@member.KnownAs" />
                        <ul class="list-inline member-icons animate text-center">
                            <li class="list-inline-item">
                                <a class="btn btn-primary btn-sm" href="/Home/details/@member.Id">
                                    <i class="fa fa-user"></i>
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="card-body p-1">
                        <h6 class="card-title text-center mb-1">
                            <i class="fa fa-user"></i>
                            KnownAs: @member.KnownAs,
                            LastActive: @member.LastActive
                        </h6>
                        <p class="card-text text-muted text-center">From: @member.City</p>
                        <p>software developer<p>
                        <ul class="list-inline-item text-center">
                                <li class="list-inline-item">
                                    <a class="btn btn-primary btn-sm" target="_blank" href="https://www.facebook.com/Icreatesites4u-690772767726869">
                                        <i class="fa fa-facebook fa-2x"></i>
                                    </a>
                                </li>
                                <li class="list-inline-item">
                                    <a class="btn btn-primary btn-sm" target="_blank" href="https://github.com/UxDeveloper82">
                                        <i class="fa fa-github fa-2x"></i>
                                    </a>
                                </li>
                                <li class="list-inline-item">
                                    <a class="btn btn-primary btn-sm" target="_blank" href="https://www.google.com/maps/uv?pb=!1s0x88e77ed68df2032d%3A0x39473d14c2e9959e!3m1!7e115!4shttps%3A%2F%2Flh5.googleusercontent.com%2Fp%2FAF1QipOWSurZuJ_E8tZErlNRDEapgRV6UYv4kO7xmP74%3Dw300-h160-k-no!5sICreateSites4u%2C%20Orlando%2C%20FL%20-%20Google%20Search!15sCgIgAQ&imagekey=!1e10!2sAF1QipOWSurZuJ_E8tZErlNRDEapgRV6UYv4kO7xmP74&hl=en&sa=X&ved=2ahUKEwikyseY8f7tAhUwxVkKHQVDAHcQoiowE3oECCAQAw">
                                        <i class="fa fa-google fa-2x"></i>
                                    </a>
                                </li>
                         </ul>
                     </div>
                </div>
            </div>

        }

    </div>
</div>

